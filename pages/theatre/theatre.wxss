.cnt {
  width: 100%;
  margin-left: 30rpx;
  border-bottom: 1px solid #d7d7d7;
  display: flex;
}

.cnt-left {
  flex: 4;
  padding: 20rpx 0;
}

.cnt-right {
  flex: 1;
  padding: 20rpx 0;
}

.cnt-right text {
  position: relative;
  right: 20rpx;
  top: 100rpx;
  color: #999;
}

.price {
  font-weight: 600;
}

.line-1, .line-2, .line-3 {
  margin-bottom: 20rpx;
}

.line-1 view {
  display: inline-block;
  margin-left: 20rpx;
}

.line-2 text {
  color: #999;
}

.line-3 view {
  display: inline-block;
}

.line-3 .blue text {
  border-radius: 3px;
  border: 1px solid deepskyblue;
  padding: 4rpx;
  margin: 0 4rpx 0 0;
}

.line-3 .orange text {
  border-radius: 3px;
  border: 1px solid orange;
  padding: 4rpx;
  margin: 0 4rpx 0 0;
}

.line-4 .icon {
  border-radius: 3px;
  border: 1px solid orange;
  background-color: orange;
  padding: 4rpx;
  margin: 0 4rpx 0 0;
}
